#!/usr/bin/env bash

set -e

author="$1"

if [ -z "$author" ]; then
    read -rp "Target Author (GitHub Username): " author
fi

[ -z "$author" ] && { echo "No username entered. Exiting."; exit 1; }

read -rp "ssh/HTTPS: " method
method=$(echo "$method" | tr '[:upper:]' '[:lower:]')

if [[ "$method" == "ssh" ]]; then
    clone_prefix="git@github.com:$author"
    method="ssh"
else
    clone_prefix="https://github.com/$author"
    method="https"
fi

echo "Fetching repo list for $author..."
repos=$(curl -s "https://api.github.com/users/$author/repos?per_page=200" \
        | jq -r '.[].name')

if [ -z "$repos" ]; then
    echo "No repositories found (or GitHub API said no)."
    exit 1
fi

mkdir -p "$author"
cd "$author" || exit 1

echo "Cloning using $method..."
for repo in $repos; do
    if [ -d "$repo/.git" ]; then
        echo "$repo already exists, skipping."
        continue
    fi

    echo "Cloning $repo..."
    if git clone "$clone_prefix/$repo.git" >/dev/null 2>&1; then
        echo "Cloned $repo"
    else
        echo "Failed to clone $repo" >&2
    fi
done

echo "Done!"

# Hang

KEEP_OPEN=true

if [ "$KEEP_OPEN" = true ]; then
    echo
    read -p "Press 'Enter' to exit / Type 'disable' to disable hanging: " response
    if [ "$response" = "disable" ]; then
        sed -i 's/^KEEP_OPEN=true/KEEP_OPEN=false/' "$0"
        echo
        echo "KEEP_OPEN set to false"
        echo "Change 'KEEP_OPEN=true' to enable"
        sleep 4
    fi
fi
